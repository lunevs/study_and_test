<%- include("header") -%>

        <div class="box" id="heading">
            <h1> <%= inFileApp %> </h1>
        </div>

        <div class="box">
            <% todoList.forEach(el => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= el._id %>" onchange="this.form.submit()" />
                        <p><%= el.name %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= inFileApp %>" />
                </form>
            <% }) %>

            <form class="item" method="post" action="/">
                <input type="text" name="inputValue" placeholder="New Item" autocomplete="off" />
                <button type="submit" name="list" value="<%= inFileApp %>" >+</button>
            </form>
        </div>

<%- include("footer") -%>
