<%- include("header") -%>

        <div class="box" id="heading">
            <h1> <%= inFileApp %> </h1>
        </div>

        <div class="box">
            <% for (let i of todoList) { %>
                <div class="item">
                    <input type="checkbox" />
                    <p><%= i %></p>
                </div>
            <% } %>

            <form class="item" method="post" action="/">
                <input type="text" name="inputValue" placeholder="New Item" autocomplete="off" />
                <button type="submit" name="list" value="<%= inFileApp %>" >+</button>
            </form>
        </div>

<%- include("footer") -%>
