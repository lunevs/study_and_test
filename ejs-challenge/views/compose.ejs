<%- include("partials/header") -%>

    <h1 class="mt-3">Compose</h1>

    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="postTitle">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="postBody"></textarea>
        </div>
        <div class="mt-0">
            <button type="submit" class="btn btn-primary mt-3">Publish</button>
        </div>
    </form>

<%- include("partials/footer") -%>
